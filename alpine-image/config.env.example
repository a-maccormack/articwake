# articwake configuration
# Copy this file to config.env and fill in your values

# Required: MAC address of the server to wake (format: aa:bb:cc:dd:ee:ff)
ARTICWAKE_HOMELAB_MAC="aa:bb:cc:dd:ee:ff"

# Required: IP address of the server (Tailscale IP or LAN IP)
ARTICWAKE_HOMELAB_IP="100.x.y.z"

# Optional: Bind address for the web UI (default: 0.0.0.0 = all interfaces)
# ARTICWAKE_BIND_HOST="0.0.0.0"

# Optional: Port for the web UI (default: 80)
# ARTICWAKE_PORT="80"

# Optional: Broadcast address for Wake-on-LAN (default: 255.255.255.255)
# ARTICWAKE_HOMELAB_BROADCAST="255.255.255.255"

# Optional: SSH port for LUKS unlock (default: 2222 for dropbear initrd)
# ARTICWAKE_SSH_PORT="2222"
